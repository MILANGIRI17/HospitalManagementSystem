@model IEnumerable<Hospital.Models.Doctor>
@{
    ViewBag.Title = "Doctor";
}
<h1>Doctor</h1>
<p>
    <a asp-action="Create" class="btn btn-primary btn-primary">Create New</a>
</p>
<table class="table" style="text-align:center;">
    <thead>
        <tr style="background-color:black; color:white;">
            <th>Name</th>
            <th>Experience</th>
            <th>Speciality</th>
            <th>SurgerySuccessRate</th>
            <th>Availability</th>
            <th>Education</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Experience</td>
                <td>@item.Speciality</td>
                <td>@item.SurgerySuccessRate</td>
                <td>
                    @if (@item.Availability)
                    {
                        <i style="color:green;" class="fa fa-check"></i>
                    }
                    else
                    {
                        <i style="color:red;" class="fa fa-times-circle"></i>
                    }
                </td>
                <td>@item.Education</td>
                <td>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a> |
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id"><i class="fa fa-info-circle"></i></a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a> 

                </td>
            </tr>
        }
    </tbody>
</table>